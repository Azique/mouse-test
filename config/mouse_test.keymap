#include <behaviors/mouse_keys.dtsi>
#include <behaviors.dtsi>
#include <dt-bindings/zmk/bt.h>
#include <dt-bindings/zmk/keys.h>
#include <dt-bindings/zmk/mouse.h>
#include <dt-bindings/zmk/outputs.h>

#define DEFAULT 0
#define MOUSE 1
#define DEVICE 2
#define BLTH 3

/ {
  behaviors {
    ltm: layer-tap-or-mouse {
      compatible = "zmk,behavior-hold-tap";
      #binding-cells = <2>;
      flavor = "hold-preferred";
      // hold-while-undecided;
      tapping-term-ms = <200>;
      bindings = <&mo>, <&mkp>;
    };
    mto: momentary-and-toggle {
      compatible = "zmk,behavior-hold-tap";
      #binding-cells = <2>;
      flavor = "hold-preferred";
      hold-while-undecided;
      tapping-term-ms = <200>;
      bindings = <&mo>, <&to>;
    };
    skmk: sticky_mouse_key {
      compatible = "zmk,behavior-sticky-key";
      #binding-cells = <1>;
      bindings = <&mkp>;
      release-after-ms = <5000>;
      quick-release;
    };

    mbl: mouse_button_long_press  {
      compatible = "zmk,behavior-hold-tap";
      #binding-cells = <2>;
      tapping_term_ms = <500>;
      flavor = "tap-preferred";
      bindings = <&skmk>, <&mkp>;
    };
  };
  keymap {
    compatible = "zmk,keymap";
    default_layer {
      bindings = <
        &ltm BLTH MB4 &ltm DEVICE MB5 &mbl MCLK MCLK &mto MOUSE MOUSE
        &mbl LCLK LCLK                               &mbl RCLK RCLK
      >;
    };
    mouse_layer {
      bindings = <
        &trans &trans &trans &to DEFAULT
        &trans               &trans
      >;
    };
    device_layer {
      bindings = <
        &bootloader &trans &trans &trans
        &trans                    &bt BT_CLR
      >;
    };
    bluetooth_layer {
      bindings = <
        &trans &bt BT_SEL 0 &bt BT_SEL 1 &bt BT_SEL 2
        &bt BT_SEL 3                     &bt BT_SEL 4
      >;
    };
  };
};